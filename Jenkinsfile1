pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Supu-27/Django-Notes-App.git'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t myimage .'
            }
        }
        stage('Run') {
            steps {
                sh 'docker run -p 8000:8000 myimage'
            }
        }
    }
}



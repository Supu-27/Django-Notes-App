pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t notes-app .'
            }
        }
        
        stage('Run Docker Container') {
            steps {
                sh 'docker run -p 8000:8000 --name notes-container notes-app'
            }
        }

        stage('Deploy to Production') {
            steps {
                // Add steps to deploy the container to production
            }
        }
    }
}

